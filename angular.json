{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "yarn"
  },
  "newProjectRoot": "projects",
  "schematics": {
    "@schematics/angular:component": {
      "style": "scss",
      "skipTests": true,
      "inlineStyle": true
    },
    "@schematics/angular:class": {
      "skipTests": true
    },
    "@schematics/angular:directive": {
      "skipTests": true
    },
    "@schematics/angular:guard": {
      "skipTests": true
    },
    "@schematics/angular:interceptor": {
      "skipTests": true
    },
    "@schematics/angular:pipe": {
      "skipTests": true
    },
    "@schematics/angular:service": {
      "skipTests": true
    },
    "@schematics/angular:application": {
      "strict": true
    }
  },
  "projects": {
    "moroccan-phpers": {
      "projectType": "application",
      "root": "website",
      "sourceRoot": "website/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@ngaox/devkit:builder",
          "options": {},
          "configurations": {
            "production": {
              "config": "production"
            },
            "development": {
              "config": "development"
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@ngaox/devkit:dev-server",
          "configurations": {
            "production": {
              "browserTarget": "moroccan-phpers:build:production"
            },
            "development": {
              "browserTarget": "moroccan-phpers:build:development"
            }
          },
          "defaultConfiguration": "development"
        }
      }
    }
  },
  "defaultProject": "moroccan-phpers"
}
